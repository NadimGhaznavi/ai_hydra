# Include the README and LICENSE
include README.md
include LICENSE

# Include requirements files
include requirements.txt
include requirements-docs.txt

# Include configuration files
include pyproject.toml
include poetry.lock

# Include documentation
recursive-include docs *.rst *.md *.py *.bat Makefile
recursive-include docs/_static *
prune docs/_build

# Include tests
recursive-include tests *.py

# Include steering files and specs
recursive-include .kiro *.md *.yaml *.yml

# Exclude compiled Python files
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so

# Exclude development files
exclude .gitignore
exclude .pytest_cache
exclude *.log
exclude test.log
prune .git
prune .pytest_cache
prune .hypothesis
prune hydra_venv
prune old
prune images