Screen {
    layout: grid;
    grid-size: 1 6;
    grid-rows: 3 4 3 4 12 22;
    grid-columns: 80;
}

Button {
    background: #3b7735ff;
    padding: 0 1;
    border: none;
}

#board {
    background: black;
    border: round #0c323e;
    border-subtitle-color: #5fc442;
    color: #5fc442;
    text-style: bold;
    width: 100%;
    padding: 0 1;
}

#buttons {
    background: black;
    border: round #0c323e;
    border-subtitle-color: #5fc442;
    color: #5fc442;
    text-style: bold;
    width: 100%;
    padding: 0 1;
}


#config {
    background: black;
